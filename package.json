{
  "name": "@ponharu/sort-json",
  "version": "0.3.0",
  "description": "Fast JSON key sorter - Bun-optimized, Node.js compatible",
  "keywords": [
    "bun",
    "cli",
    "fast",
    "formatter",
    "husky",
    "json",
    "lefthook",
    "lint",
    "sort"
  ],
  "license": "MIT",
  "author": "ponharu",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ponharu/sort-json.git"
  },
  "homepage": "https://github.com/ponharu/sort-json#readme",
  "bugs": {
    "url": "https://github.com/ponharu/sort-json/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "sort-json": "dist/cli.js"
  },
  "files": [
    "dist",
    "schema.json"
  ],
  "engines": {
    "bun": ">=1.0",
    "node": ">=18"
  },
  "scripts": {
    "build": "bun run generate:schema && bun build ./src/cli.ts --outdir ./dist --target node --format esm && bun run build:types",
    "build:types": "bun x tsc --emitDeclarationOnly --declaration --outDir dist",
    "check": "bun run format && bun run typecheck && bun run lint",
    "dev": "bun run ./src/cli.ts",
    "format": "bun run ./src/cli.ts && bun x oxfmt . --write",
    "generate:schema": "bun run ./scripts/generate-schema.ts",
    "lint": "bun x oxlint .",
    "prepare": "lefthook install || true",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "typecheck": "bun x tsc --noEmit"
  },
  "dependencies": {
    "@sinclair/typebox": "0.34.48",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@types/bun": "^1.2.4",
    "@types/node": "^25.0.0",
    "lefthook": "2.1.1",
    "oxfmt": "0.34.0",
    "oxlint": "1.49.0",
    "typescript": "^5.8.3"
  }
}
